{
    "title": "client",
    "required": [ "givenName", "familyName", "phones", "emails" ],
    "properties": {
        "_id": {
            "bsonType": "objectId"
        },
        "givenName": {
            "bsonType": "string",
            "description": "Name must be a string and is required",
            "minLength": 5,
            "maxLength": 25
        },
        "familyName": {
            "bsonType": "string",
            "description": "Family name must be a string and is required",
            "minLength": 5,
            "maxLength": 25
        },
        "gender": {
            "enum": [ "M", "F"],
            "description": "Must be either Male, or Female"
        },
        "picture": {
            "bsonType": "string",
            "description": "Picture must be a valid image if the field exists"
        },   
        "phones": {
            "bsonType": "array",
            "minItems": 1,
            "maxItems": 5,
            "items": {
                "bsonType": "object",
                "required": [ "areaCode", "number", "location"],
                "properties": {
                    "areaCode": {
                        "bsonType": "string",
                        "description": "Area code must be a string and is required",
                        "minLength": 2,
                        "maxLength": 4
                    },
                    "location": {
                        "enum": [ "Home", "Personal", "Other"],
						"description": "Must be either Home, Personal or Other"
                    },
                    "number": {
                        "bsonType": "string",
                        "description": "Number must be a string and is required",
                        "minLength": 8,
                        "maxLength": 15
                    }
                }
            }
        },
        "emails": {
            "bsonType": "array",
            "minItems": 1,
            "maxItems": 5,
            "items": {
                "bsonType": "object",                
                "required": [ "address", "location"],
                "properties": {
                    "address": {
                        "description": "Email must a string and is required",
                        "bsonType": "string",
                        "format": "email"
                    },
                    "location": {
                        "enum": [ "Work", "Personal", "Other"],
						"description": "Must be either Work, Personal or Other"
                    }
                }
            }
        }
    }    
}
